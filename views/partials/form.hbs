<form action="/api/productos" method="POST">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input required type="text" name="title" class="form-control" id="title">
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input required type="number" name="price" class="form-control" id="price">
    </div>

    <div class="mb-3">
        <label for="thumbnial" class="form-label">Thumbnial</label>
        <input required type="text" name="thumbnail" class="form-control" id="thumbnial">
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>